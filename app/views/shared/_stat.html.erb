<% @user ||= current_user %>
<div class="stat">
  <a href="<%= followings_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="follower" class="stat">
      <%= @user.follower_users.count %>
    </strong>
    follower
  </a>
</div>